@model OrdinarioProyecto.Models.Producto

@{
    ViewData["Title"] = "Edit";
}
<!--Creacion del formulariio de editar-->
<!--Inicio del formulario-->

<hr />

<section class="d-flex justify-content-center">
    <div class="card border-primary bg-dark text-white  col-sm-6 p-3">
        <div class="card-header text-white bg-secondary">

            <h2>Editar producto</h2>
        </div>
        <br />
        <div class="mb-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" required="required" pattern="[A-Za-z]+" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" required="required" pattern="[A-Za-z]+" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" required="required" pattern="[0-9]+" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" required="required" pattern="[0-9]+" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</section>
<div">
    <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
    </div>
    <!--fin del formulario-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
